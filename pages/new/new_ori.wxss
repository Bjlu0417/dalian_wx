.container {
  padding: 20px;
  text-align: left; /* 整体内容靠左 */
}

input {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 20px;
  width: 100%;
  text-align: left; /* 输入框内容靠左 */
}

.record-list {
  margin-bottom: 20px;
  text-align: left; /* 列表内容靠左 */
}

.record-item {
  display: flex;
  justify-content: flex-start; /* 内容靠左 */
  margin-bottom: 10px;
  text-align: left; /* 文本靠左 */
  /*white-space: nowrap; /* 禁止换行 */
}

.record-item text {
  flex: 1;
  text-align: left; /* 文本靠左 */
  /*white-space: nowrap; /* 禁止换行 */
}

/* 上部分区域 */
.top-area {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

/* 左侧区域：预设问题按钮 */
.left-area {
  flex: 1;
  margin-right: 10px;
}

.preset-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 5px; /* 按钮之间的间距 */
  margin-bottom: 10px;
}

.preset-buttons button {
  flex: 1 1 1 45%; /* 每行显示两个按钮 */
  margin: 0;
}

/* 右侧区域：语音转文字区域 */
.voice-area {
  width: 150px; /* 固定宽度 */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.voice-input {
  width: 100%;
  height: 20px;
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading {
  width: 20px;
  height: 20px;
  border: 2px solid #007AFF;
  border-top: 2px solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.voice-button {
  width: 100%;
  height: 40px;
}

/* 下部分区域 */
.bottom-area {
  display: flex;
  justify-content: space-between;
}

.bottom-area button {
  flex: 1;
  margin: 0 5px; /* 按钮之间的间距 */
}

/* 按钮样式 */
.add-button, .save-button, .output-btn {
  width: 100%;
  height: 50px; /* 按钮高度 */
}